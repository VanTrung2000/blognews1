@model UpdateCategory
    <div class="container">
        <h2 style="text-align:center;color:red">EDIT CATEGORY</h2>
        <form asp-controller="dasboard" asp-action="update" method="PUT">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row form-group">
                <div class="col-2">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-9">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button asp-controller="dasboard" asp-action="update" type="submit" class="btn btn-primary">Update</button>
                    <button asp-controller="dasboard" asp-action="tables" class="btn btn-warning">Cancel</button>
                </div>
            </div>

        </form>

    </div>

